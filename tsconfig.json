{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "sourceMap": false,
    "inlineSourceMap": true,
    "sourceRoot": "src",
    "outDir": "dist",
    "declaration": false,
    "removeComments": false,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.ts", "src/**/*.temp.ts"]
}
